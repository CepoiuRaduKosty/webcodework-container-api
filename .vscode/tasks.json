{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Docker Image for All Languages",
            "type": "shell",
            "command": "/bin/bash",
            "args": [
                "-c",
                "systemctl is-active --quiet docker || sudo systemctl start docker && docker build -t webcodework-api:latest ."
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        }
    ]
}
